

params {

    samplesheet = ''
    downsample = false
    build_seurat = false
    output_path = './'
    cluster = false
}

profiles {
    standard {
        process.executor = 'local'
        docker.enabled = false
        singularity.enabled = false
        apptainer.enabled = false
    }

    singularity {
        docker.enabled = false
        singularity.enabled = true
        apptainer.enabled = false
    }

    docker {
        docker.enabled = true
        singularity.enabled = false
        apptainer.enabled = false
    }

    apptainer {
        docker.enabled = false
        singularity.enabled = false
        apptainer.enabled = true
    }

    oscer {
        process.executor = 'slurm'
        docker.enabled = false
        singularity.enabled = false
        apptainer.enabled = true
    }
}
