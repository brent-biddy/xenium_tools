

params {

    samplesheet = ''
    downsample = false
    build_seurat = false
}

profiles {
    standard {
        process.executor = 'local'
        singularity.enabled = false
        docker.enabled = false
        apptainer.enabled = false
    }

    singularity {
        singularity.enabled = true
        docker.enabled = false
        apptainer.enabled = false
    }

    docker {
        docker.enabled = true
        singularity.enabled = false
        apptainer.enabled = false
    }

    apptainer {
        docker.enabled = false
        singularity.enabled = false
        apptainer.enabled = true
    }
}
